<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>teLogin</servlet-name>
        <servlet-class>helpers.servlets.LoginHandling</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchHandling</servlet-name>
        <servlet-class>helpers.servlets.SearchHandling</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>appPageMaker</servlet-name>
        <servlet-class>helpers.servlets.appPageMaker</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAccountInfoManager</servlet-name>
        <servlet-class>helpers.servlets.UserAccountInfoManager</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>teLogin</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/failedLogin</url-pattern>
        <url-pattern>/accountCreation</url-pattern>
        <url-pattern>/getCreateAccountInfo</url-pattern>
        <url-pattern>/accountLogin</url-pattern>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchHandling</servlet-name>
        <url-pattern>/getResults</url-pattern>
        <url-pattern>/manageResults</url-pattern>
        <url-pattern>/sortResults</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>appPageMaker</servlet-name>
        <url-pattern>/viewAppPage</url-pattern>
        <url-pattern>/commentOnForum</url-pattern>
        <url-pattern>/rateApp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAccountInfoManager</servlet-name>
        <url-pattern>/viewAccount</url-pattern>
        <url-pattern>/confirmDeleteAccount</url-pattern>
        <url-pattern>/deleteAccount</url-pattern>
        <url-pattern>/changePasswordPage</url-pattern>
        <url-pattern>/changeThePassword</url-pattern>
        <url-pattern>/changeUsernamePage</url-pattern>
        <url-pattern>/changeTheUsername</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
